<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Mosaic.UI">

    <DataTemplate x:Key="VisibleCardTemplate">
        <Border BorderBrush="Teal"
                BorderThickness="5"
                Margin="5"
                Height="80">
            <TextBlock Text="{Binding}"
                       Padding="25"
                       TextAlignment="Center"
                       FontWeight="ExtraBlack"
                       FontSize="18" />
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="HiddenCardTemplate">
        <Border Margin="5" 
                BorderBrush="Black"
                BorderThickness="1"
                Height="80"/>
    </DataTemplate>

    <DataTemplate x:Key="MoveableCardTemplate">
        <Button Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=DataContext.MoveCard}"
                CommandParameter="{Binding}">
            <Button.Template>
                <ControlTemplate>
                    <Border BorderBrush="Teal"
                            BorderThickness="5"
                            Margin="5"
                            Height="80">
                        <TextBlock Text="{Binding}"
                                   Padding="25"
                                   TextAlignment="Center"
                                   FontWeight="ExtraBlack"
                                   FontSize="18">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="true">
                                            <Setter Property="Background"
                                                    Value="Red"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </DataTemplate>

</ResourceDictionary>